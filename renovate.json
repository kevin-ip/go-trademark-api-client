{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "managers": ["gomod"],
      "updateTypes": ["major" ,"minor", "patch"],
      "automerge": false
    }
  ],
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "labels": ["dependencies", "renovate"],
  "dependencyDashboard": true,
  "schedule": [ "* 0-3 * * 1"]
}
